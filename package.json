{
    "name": "iobroker.todoist3",
    "version": "1.0.0",
    "description": "Todoist Adapter with REST API v2",
    "author": {
        "name": "Ullulaki",
        "email": "derwahrehansgerlach@gmail.com"
    },
    "homepage": "https://github.com/Ullulaki/ioBroker.todoist3",
    "license": "MIT",
    "keywords": [
        "ioBroker",
        "todoist",
        "Smart Home",
        "home automation",
        "tasks",
        "productivity"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Ullulaki/ioBroker.todoist3"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "type": "module",
    "dependencies": {
        "@iobroker/adapter-core": "^3.0.4",
        "@todoist/api-typescript": "^3.0.1",
        "axios": "^1.6.7"
    },
    "devDependencies": {
        "@iobroker/testing": "^4.1.0",
        "@types/chai": "^4.3.11",
        "@types/chai-as-promised": "^7.1.8",
        "@types/gulp": "^4.0.17",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.11.17",
        "@types/proxyquire": "^1.3.31",
        "@types/sinon": "^17.0.3",
        "@types/sinon-chai": "^3.2.12",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "chai": "^4.3.10",
        "chai-as-promised": "^7.1.1",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "gulp": "^4.0.2",
        "mocha": "^10.2.0",
        "prettier": "^3.2.5",
        "proxyquire": "^2.1.3",
        "rimraf": "^5.0.5",
        "sinon": "^17.0.1",
        "sinon-chai": "^3.7.0",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "main": "build/main.js",
    "files": [
        "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
        "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
        "build/",
        "www/",
        "io-package.json",
        "LICENSE"
    ],
    "scripts": {
        "prebuild": "rimraf build",
        "build": "tsc -p tsconfig.json",
        "watch": "tsc -p tsconfig.json --watch",
        "test:js": "mocha --config test/mocharc.custom.json",
        "test:package": "mocha test/package --exit",
        "test:integration": "mocha test/integration --exit",
        "test": "npm run test:js && npm run test:package",
        "lint": "eslint --ext .ts src/",
        "lint:fix": "eslint --ext .ts src/ --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "release": "release-script"
    },
    "bugs": {
        "url": "https://github.com/Ullulaki/ioBroker.todoist3/issues"
    },
    "readmeFilename": "README.md"
}
